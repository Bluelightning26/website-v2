---
import '../styles/globals.scss';
import backgroundImage from '../../public/background-demo.png';
---


<style lang="scss">
  %background-image {
    background-image: url('/background-demo.png');
    background-size: cover;
    background-position: center;
  }

  body {
    background-color: var(--background-color);
    position: relative;
  }

  body::before {
    @extend %background-image;
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    opacity: 50%;
    pointer-events: none;
    z-index: -1;
  }

  .my-element {
    @extend %background-image;
  }
</style>
