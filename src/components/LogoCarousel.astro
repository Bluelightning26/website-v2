<style lang="scss">
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  @keyframes slide {
    from { transform: translateX(0); }
    to { transform: translateX(-100%); }
  }

  .logos {
    overflow: hidden;
    padding: 60px 0;
    background: var(--pink-40);
    white-space: nowrap;
    position: relative;

    &::before,
    &::after {
      position: absolute;
      top: 0;
      width: 250px;
      height: 100%;
      content: "";
      z-index: 2;
    }

    &::before {
      left: 0;
    }

    &::after {
      right: 0;
    }

    &:hover .logos-slide {
      transition: animation-play-state 0.5s, transform 2s;
        animation-play-state: paused;
    }

    .logos-slide {
      display: inline-block;
      animation: 35s slide infinite linear;

      img {
        height: 4rem;
        margin: 0 3rem;

      &:hover {
        transform: scale(1.2);
        transition: transform 0.3s;
      }

      }
    }
  }

</style>
